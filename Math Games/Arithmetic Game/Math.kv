<MathGridLayout>:
    id: Math
    textbox: Input
    display: Output
    rows: 3
    padding: 10
    spacing: 10
    BoxLayout:
        spacing: 10
        Label:
            id: Output
            halign: "center"
            valign: "middle"
            text: "Please enter an opperand\nex: '+'  '-'  '*'  '/'  or  'R'"
            font_size: 128

    BoxLayout:
        spacing: 10
        TextInput:
            id: Input
            focus: True
            text: ""
            # centers text in text input
            padding_x:
                [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0,
                0] if self.text else [self.center[0], 0]
            padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]
            font_size: 128
            multiline: False
            on_text_validate: 
                Math.Game(self.text)
                # clears text after input
                self.text = ""
                focus: True
            
    BoxLayout:
        spacing: 10
        Label:
            font_size: 128
            text: "Score:   " + str(root.score)